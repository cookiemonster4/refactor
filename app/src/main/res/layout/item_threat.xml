<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="threat"
            type="com.elyonut.wow.model.Threat" />
        <variable
            name="threatFeaturesAdapter"
            type="com.elyonut.wow.model.ThreatFeaturesAdapter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:textAlignment="center">

            <ImageView
                android:id="@+id/threat_level_color"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:background="@color/lowRisk"
                android:contentDescription="@string/threat_level_color"
                android:layout_marginStart="6dp" />

            <TextView
                android:id="@+id/threat_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/threat_level"
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{threat.level.toString()}"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/threat_distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".30"
                android:gravity="center"
                android:text="@{String.valueOf(threat.distanceMeters)}"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceListItem" />

        </LinearLayout>

    </LinearLayout>
</layout>
